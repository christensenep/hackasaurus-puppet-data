<VirtualHost *:80>
  ServerName <%= site %>
  ServerAlias <%= site %>.dev

  WSGIDaemonProcess <%= site %> processes=1 threads=15
  WSGIProcessGroup <%= site %>
  WSGIScriptAlias / <%= wsgiDir %>/htmlpad.wsgi
  <Directory <%= wsgiDir %>>
    Order allow,deny
    Allow from all
  </Directory>

  Alias /static "<%= staticFilesDir %>"
  <Directory "<%= staticFilesDir %>">
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>
</VirtualHost>
